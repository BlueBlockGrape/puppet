filebeat:
  prospectors:
    - type: log
      paths:
        - /var/log/omegaup/omegaup.log*
      document_type: omegaup-frontend
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
      multiline:
        pattern: '^[0-9]{4}-[0-9]{2}-[0-9]{2}'
        negate: true
        match: after
    - type: log
      paths:
        - /var/log/omegaup/csp.log*
      document_type: omegaup-csp
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
    - type: log
      paths:
        - /var/log/omegaup/jserror.log*
      document_type: omegaup-jserror
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
    - type: log
      paths:
        - /var/log/nginx/*.access.log*
      document_type: nginx-access
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
    - type: log
      paths:
        - /var/log/nginx/*.error.log*
      document_type: nginx-error
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
      multiline:
        pattern: '^[0-9]{4}/[0-9]{2}/[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2} '
        negate: true
        match: after
    - type: log
      paths:
        - /var/log/omegaup/service.log*
      document_type: omegaup-service
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
    - type: log
      paths:
        - /var/log/omegaup/broadcaster.log*
      document_type: omegaup-broadcaster
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
    - type: log
      paths:
        - /var/log/php*-fpm.log*
      document_type: php-fpm
      exclude_files: [".gz$"]
      fields_under_root: true
      fields:
        env: <%= @environment %>
      multiline:
        pattern: '^\[[0-9]{2}-[a-zA-Z]{3}-[0-9]{4} [0-9]{2}:[0-9]{2}:[0-9]{2}\]'
        negate: true
        match: after

output:
  logstash:
    hosts:
      - <%= @logstash_host %>
