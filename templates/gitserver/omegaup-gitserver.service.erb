[Unit]
Description=omegaUp git service
After=network.target<% if @local_database %> mysql.service<% end %>
<% if @local_database %>Requires=mysql.service<% end %>

[Service]
Type=notify
User=omegaup
Group=omegaup
ExecStart=/usr/bin/omegaup-gitserver
ExecReload=/bin/kill -s HUP $MAINPID
WorkingDirectory=/var/lib/omegaup
Restart=always

[Install]
WantedBy=multi-user.target
